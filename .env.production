# Production Environment Variables
# These will be set in the production hosting platform

# Database
DATABASE_URL=sqlite:///./production.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@host:port/dbname

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=production

# CORS Origins (set to your production frontend URL)
ALLOWED_ORIGINS=["https://your-frontend-domain.vercel.app", "https://your-custom-domain.com"]

# Security
SECRET_KEY=your-production-secret-key-here
DEBUG=false

# External APIs (if using)
# STOCK_API_KEY=your_api_key_here
# REAL_ESTATE_API_KEY=your_api_key_here